<div class="container mt-5 mb-4">
	<div class="p-5 bg-secondary rounded-3">
		<div class="container-fluid py-5 text-center">
			{%- assign title = section.settings.blog_title | default: blog.title -%}
			<h1 class="display-1 fw-bold text-white">{{ title }}</h1>
			<hr class="my-4"/>
			<p class="col-md-8 fs-6 mx-auto">{{ section.settings.blog_description }}</p>
		</div>
	</div>

	<div class="row my-5 py-5">
		{% paginate blog.articles by 4 %}
			{% for article in blog.articles %}
				<div class="col-12">
					<div class="card mb-3">
						<div class="row g-0">
							<div class="col-md-4">
								{% if article.image == blank %}
									{{ "image" | placeholder_svg_tag }}
								{% else %}
									{{ article.image | img_url: 'master' | img_tag: "", "img-fluid rounded-start" }}
								{% endif %}
							</div>
							<div class="col-md-8">
								<div class="card-body">
									<a href="{{ article.url }}">
										<h5 class="card-title">{{ article.title }}</h5>
									</a>
									<p class="card-text">{{ article.excerpt_or_content | strip_html | truncatewords: 40 }}</p>
									<p class="card-text"><small class="text-muted">{{ article.author }}</small> Published on {{ article.published_at | date: "%b %d, %Y" }}</p>
								</div>
							</div>
						</div>
					</div><!-- /Card -->
				</div>
			{% endfor %}

			{% if paginate.pages > 1 %}
					<div class="collection-pagination d-flex justify-content-center mt-5">
						<nav arial-label="Page navigation example">
							<ul class="pagination">
								{% if paginate.previus.is_link %}
									<li class="page-item"><a class="page-link" href="{{ paginate.previous.url }}">previus</a></li>
								{% else %}
									<li class="page-item"><span class="page-link">previus</span></li>
								{% endif %}

								{% for part in paginate.parts %}
									{% if part.is_link %}
										<li class="page-item"><a class="page-link" href="{{ part.url }}">{{ part.title }}</a></li>
									{% else %}
										<li class="page-item active"><span class="page-link">{{ part.title }}</span></li>
									{% endif %}
								{% endfor %}

								{% if paginate.next.is_link %}
									<li class="page-item"><a class="page-link" href="{{ paginate.next.url }}">Next</a></li>
								{% else %}
									<li class="page-item"><span class="page-link">Next</span></li>
								{% endif %}
							</ul>
						</nav>
					</div>
				{% endif %}
		{% endpaginate %}
	</div>
</div>

{% schema %}
{
	"name": "Main Blog",
	"settings": [
		{
			"type": "text",
			"id": "blog_title",
			"label": "Blog Title"
		},
		{
			"type": "textarea",
			"id": "blog_description",
			"label": "Blog Description"
		}
	]
}
{% endschema %}