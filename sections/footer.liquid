<footer class="bg-dark py-5">
	<div class="container">
		<div class="row">
			{% for block in section.blocks %}
				{% if block.type == "text_block" %}
					<div class="col-6">
						<h2 class="text-white">{{ block.settings.title_heading }}</h2>
						<p class="text-white">{{ block.settings.content_text }}</p>
					</div>
					{% endif %}
				{% if block.type == "footer_menu" %}
					<div class="col-3">
						<h3 class="text-white">{{ block.settings.heading }}</h3>
						{% if block.settings.menu.links.size > 0 %}
							<ul class="footer-menu">
								{% for link in block.settings.menu.links %}
									<li><a class="text-white" href="{{ link.url }}">{{ link.title }}</a></li>
								{% endfor %}
							</ul>
						{% endif %}
					</div>
				{% endif %}
				{% if block.type == "footer_image" %}
					<div class="col-6">
						<div class="footer-image featured-image bg-light object-fit-cover" style="max-width: 200px;">
							{% if block.settings.image == blank %}
								{{ "image" | placeholder_svg_tag }}
							{% else %}
								{{  block.settings.image | img_url: "master" | img_tag: " ", "w-100" }}	
							{% endif %}
						</div>
					</div>	
				{% endif %}
			{% endfor %}
		</div>
	</div>
</footer>

{% schema %}
{
	"name": "Footer Page",
	"blocks": [
		{
			"name": "Footer Menu",
			"type": "footer_menu",
			"settings": [
				{
					"type": "text",
					"id": "heading",
					"label": "Heading",
					"default": "Menu Title"
				}, 
				{
					"type": "link_list",
					"id": "menu",
					"label": "Menu",
					"default": "main-menu"
				}
			]
		},
		{
            "name": "Footer Image",
            "type": "footer_image",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image"
                }
            ]
        },
		{
			"name": "Text Block",
			"type": "text_block",
			"settings": [
				{
					"type": "text",
					"id": "title_heading",
					"label": "Heading",
					"default": "Heading Text"
				}, 
				{
					"type": "textarea",
					"id": "content_text",
					"label": "Content",
					"default": "<p>This is an example for this content.</p>"
				}
			]
		}
	]
}
{% endschema %}