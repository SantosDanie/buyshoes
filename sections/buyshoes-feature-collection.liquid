<div class="container">
	<div class="row">
		{% for index in (1..2) %}
			{% for item in (1..6) %}
				<div class="col-3">
					<div class="card mb-3" style="width: 18rem;">
						{{ 'product-' | append: item | placeholder_svg_tag: 'd-block w-100' }}
						<div class="card-body">
							<h5 class="card-title">100 Q {{ item }}</h5>
							<a href="#" class="btn btn-primary">View Product {{ item }}</a>
						</div>
					</div>
				</div>
			{% endfor %}
		{% endfor %}
	</div>
</div>